%h1 Listing publications

%table
  %tr
    %th Title
    %th Url
    %th Appearance url template
    %th Details
    %th Year
    %th
    %th
    %th

  - @publications.each do |publication|
    %tr
      %td= publication.title
      %td= publication.url
      %td= publication.appearance_url_template
      %td= publication.details
      %td= publication.year
      %td= link_to 'Show', publication
      %td= link_to 'Edit', edit_publication_path(publication)
      %td= link_to 'Destroy', publication, :method => :delete, :data => { :confirm => 'Are you sure?' }

%br

