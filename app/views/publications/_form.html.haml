= form_for @publication do |f|
  - if @publication.errors.any?
    #error_explanation
      %h2= "#{pluralize(@publication.errors.count, "error")} prohibited this publication from being saved:"
      %ul
        - @publication.errors.full_messages.each do |msg|
          %li= msg

  .field
    = f.label :title
    = f.text_field :title
  .field
    = f.label :url
    = f.text_field :url
  .field
    = f.label :appearance_url_template
    = f.text_field :appearance_url_template
  .field
    = f.label :details
    = f.text_field :details
  .field
    = f.label :year
    = f.text_field :year
  .actions
    = f.submit 'Save'
