= form_for @translation do |f|
  - if @translation.errors.any?
    #error_explanation
      %h2= "#{pluralize(@translation.errors.count, "error")} prohibited this translation from being saved:"
      %ul
        - @translation.errors.full_messages.each do |msg|
          %li= msg

  .field
    = f.label :of_medium_type
    = f.text_field :of_medium_type
  .field
    = f.label :of_medium_id
    = f.number_field :of_medium_id
  .field
    = f.label :to_medium_type
    = f.text_field :to_medium_type
  .field
    = f.label :to_medium_id
    = f.number_field :to_medium_id
  .actions
    = f.submit 'Save'
