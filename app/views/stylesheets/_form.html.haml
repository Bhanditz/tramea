= form_for @stylesheet do |f|
  - if @stylesheet.errors.any?
    #error_explanation
      %h2= "#{pluralize(@stylesheet.errors.count, "error")} prohibited this stylesheet from being saved:"
      %ul
        - @stylesheet.errors.full_messages.each do |msg|
          %li= msg

  .field
    = f.label :name
    = f.text_field :name
  .actions
    = f.submit 'Save'
