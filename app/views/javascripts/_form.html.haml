= form_for @javascript do |f|
  - if @javascript.errors.any?
    #error_explanation
      %h2= "#{pluralize(@javascript.errors.count, "error")} prohibited this javascript from being saved:"
      %ul
        - @javascript.errors.full_messages.each do |msg|
          %li= msg

  .field
    = f.label :name
    = f.text_field :name
  .actions
    = f.submit 'Save'
