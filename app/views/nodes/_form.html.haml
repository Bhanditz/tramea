= form_for @node do |f|
  - if @node.errors.any?
    #error_explanation
      %h2= "#{pluralize(@node.errors.count, "error")} prohibited this node from being saved:"
      %ul
        - @node.errors.full_messages.each do |msg|
          %li= msg

  .field
    = f.label :source_id
    = f.number_field :source_id
  .field
    = f.label :parent_id
    = f.number_field :parent_id
  .field
    = f.label :original_id
    = f.text_field :original_id
  .actions
    = f.submit 'Save'
