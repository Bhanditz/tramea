= form_for @video do |f|
  - if @video.errors.any?
    #error_explanation
      %h2= "#{pluralize(@video.errors.count, "error")} prohibited this video from being saved:"
      %ul
        - @video.errors.full_messages.each do |msg|
          %li= msg

  .field
    = f.label :guid
    = f.text_field :guid
  .field
    = f.label :locale
    = f.number_field :locale
  .field
    = f.label :preview
    = f.check_box :preview
  .field
    = f.label :title
    = f.text_field :title
  .field
    = f.label :description
    = f.text_area :description
  .field
    = f.label :copyright
    = f.text_field :copyright
  .field
    = f.label :license_id
    = f.number_field :license_id
  .field
    = f.label :original_url
    = f.text_field :original_url
  .field
    = f.label :url
    = f.text_field :url
  .field
    = f.label :javascript_id
    = f.number_field :javascript_id
  .field
    = f.label :stylesheet_id
    = f.number_field :stylesheet_id
  .actions
    = f.submit 'Save'
