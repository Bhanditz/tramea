= form_for @concept do |f|
  - if @concept.errors.any?
    #error_explanation
      %h2= "#{pluralize(@concept.errors.count, "error")} prohibited this concept from being saved:"
      %ul
        - @concept.errors.full_messages.each do |msg|
          %li= msg

  .field
    = f.label :source_id
    = f.number_field :source_id
  .field
    = f.label :parent_id
    = f.number_field :parent_id
  .field
    = f.label :original_id
    = f.text_field :original_id
  .actions
    = f.submit 'Save'
