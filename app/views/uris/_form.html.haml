= form_for @uri do |f|
  - if @uri.errors.any?
    #error_explanation
      %h2= "#{pluralize(@uri.errors.count, "error")} prohibited this uri from being saved:"
      %ul
        - @uri.errors.full_messages.each do |msg|
          %li= msg

  .field
    = f.label :string
    = f.text_field :string
  .field
    = f.label :locale
    = f.number_field :locale
  .field
    = f.label :position
    = f.number_field :position
  .actions
    = f.submit 'Save'
