= form_for @source do |f|
  - if @source.errors.any?
    #error_explanation
      %h2= "#{pluralize(@source.errors.count, "error")} prohibited this source from being saved:"
      %ul
        - @source.errors.full_messages.each do |msg|
          %li= msg

  .field
    = f.label :name
    = f.text_field :name
  .field
    = f.label :full_name
    = f.text_field :full_name
  .field
    = f.label :abbr
    = f.text_field :abbr
  .field
    = f.label :description
    = f.text_area :description
  .field
    = f.label :private_notes
    = f.text_area :private_notes
  .field
    = f.label :admin_notes
    = f.text_area :admin_notes
  .field
    = f.label :icon
    = f.text_field :icon
  .field
    = f.label :url
    = f.text_field :url
  .field
    = f.label :small_icon_url
    = f.text_field :small_icon_url
  .actions
    = f.submit 'Save'
