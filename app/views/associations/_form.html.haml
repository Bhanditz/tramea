= form_for @association do |f|
  - if @association.errors.any?
    #error_explanation
      %h2= "#{pluralize(@association.errors.count, "error")} prohibited this association from being saved:"
      %ul
        - @association.errors.full_messages.each do |msg|
          %li= msg

  .field
    = f.label :parent_type
    = f.text_field :parent_type
  .field
    = f.label :parent_id
    = f.number_field :parent_id
  .field
    = f.label :child_type
    = f.text_field :child_type
  .field
    = f.label :child_id
    = f.number_field :child_id
  .field
    = f.label :trusted
    = f.check_box :trusted
  .field
    = f.label :reviewed
    = f.check_box :reviewed
  .field
    = f.label :visible
    = f.check_box :visible
  .field
    = f.label :overview
    = f.check_box :overview
  .field
    = f.label :position
    = f.number_field :position
  .field
    = f.label :rating
    = f.text_field :rating
  .field
    = f.label :num_ratings
    = f.number_field :num_ratings
  .actions
    = f.submit 'Save'
