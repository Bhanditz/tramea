= form_for @attribution do |f|
  - if @attribution.errors.any?
    #error_explanation
      %h2= "#{pluralize(@attribution.errors.count, "error")} prohibited this attribution from being saved:"
      %ul
        - @attribution.errors.full_messages.each do |msg|
          %li= msg

  .field
    = f.label :medium_type
    = f.number_field :medium_type
  .field
    = f.label :medium_id
    = f.number_field :medium_id
  .field
    = f.label :who
    = f.text_field :who
  .field
    = f.label :url
    = f.text_field :url
  .field
    = f.label :role_id
    = f.number_field :role_id
  .actions
    = f.submit 'Save'
