= form_for @image do |f|
  - if @image.errors.any?
    #error_explanation
      %h2= "#{pluralize(@image.errors.count, "error")} prohibited this image from being saved:"
      %ul
        - @image.errors.full_messages.each do |msg|
          %li= msg

  .field
    = f.label :guid
    = f.text_field :guid
  .field
    = f.label :locale
    = f.number_field :locale
  .field
    = f.label :title
    = f.text_field :title
  .field
    = f.label :description
    = f.text_area :description
  .field
    = f.label :copyright
    = f.text_field :copyright
  .field
    = f.label :license_id
    = f.number_field :license_id
  .field
    = f.label :original_url
    = f.text_field :original_url
  .field
    = f.label :full_size_url
    = f.text_field :full_size_url
  .field
    = f.label :crop_url
    = f.text_field :crop_url
  .field
    = f.label :thumbnail_url
    = f.text_field :thumbnail_url
  .actions
    = f.submit 'Save'
